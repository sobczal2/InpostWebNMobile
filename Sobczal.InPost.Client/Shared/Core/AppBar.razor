@inject NavigationManager Navigation

<MudAppBar>
    <MudButton Href="/"  Style="@_buttonStyle">
        <MudImage Src="@_inpostImageUrl"></MudImage>
    </MudButton>
    <MudButton OnClick="SledzClicked" Style="@_buttonStyle">Śledź</MudButton>
    <MudButton OnClick="OdbierzClicked" Style="@_buttonStyle">Odbierz</MudButton>
    <MudButton OnClick="NadajClicked" Style="@_buttonStyle">Nadaj</MudButton>
    <MudSpacer/>
    <AccessControl/>
</MudAppBar>

@code
{
    private string _buttonStyle = "height: 100%; margin-left: 10px; border-radius: 0;";
    private string _inpostImageUrl = "/images/inpost-logo.svg";
    private void SledzClicked()
    {
        Navigation.NavigateTo("/Track");
    }

    private void OdbierzClicked()
    {
        Navigation.NavigateTo("/Receive");
    }

    private void NadajClicked()
    {
        Navigation.NavigateTo("/Send");
    }
}